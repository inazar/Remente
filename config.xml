<?xml version='1.0' encoding='utf-8'?>
<widget id="com.remente.mentalgym" version="0.1.4" versionCode="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Remente</name>
    <description>
        Improve your mental strength.
    </description>
    <author email="nazar@remente.com" href="http://remente.com">
        Remente Team
    </author>
    <preference name="AllowInlineMediaPlayback" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="DisallowOverscroll" value="false" />
    <preference name="EnableViewportScale" value="false" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value=".5" />
    <preference name="KeyboardDisplayRequiresUserAction" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="TopActivityIndicator" value="gray" />
    <preference name="GapBetweenPages" value="0" />
    <preference name="PageLength" value="0" />
    <preference name="PaginationBreakingMode" value="page" />
    <preference name="PaginationMode" value="unpaginated" />

    <preference name="LoadUrlTimeoutValue" value="10000"/>

    <content src="index.html" />
    <access origin="*" />
    <!-- access origin="http://remente.herokuapp.com" / -->

    <gap:platform name="ios" />
    <gap:platform name="android" />

    <preference name="phonegap-version" value="3.4.0" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <preference name="permissions" value="none" />
    <icon src="icon.png" />

    <!-- iOS -->
    <preference name="target-device" value="universal" />
    <preference name="detect-data-types" value="false" />
    <preference name="deployment-target" value="6.0" />

    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="resources/ios/icons/icon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="resources/ios/icons/icon-60@2x.png" gap:platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="resources/ios/icons/icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="resources/ios/icons/icon-76@2x.png" gap:platform="ios" width="152" height="152" />

    <!-- Settings Icon -->
    <icon src="resources/ios/icons/icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="resources/ios/icons/icon-small@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="resources/ios/icons/icon-40.png" gap:platform="ios" width="40" height="40" />
    <icon src="resources/ios/icons/icon-40@2x.png" gap:platform="ios" width="80" height="80" />

    <!-- iOS 6.1 -->
    <!-- iPhone / iPod Touch -->
    <icon src="resources/ios/icons/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="resources/ios/icons/icon@2x.png" gap:platform="ios" width="114" height="114" />

    <!-- iPad -->
    <icon src="resources/ios/icons/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="resources/ios/icons/icon-72@2x.png" gap:platform="ios" width="144" height="144" />

    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="resources/ios/icons/icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="resources/ios/icons/icon-small@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- iPad Spotlight and Settings Icon -->
    <icon src="resources/ios/icons/icon-50.png" gap:platform="ios" width="50" height="50" />
    <icon src="resources/ios/icons/icon-50@2x.png" gap:platform="ios" width="100" height="100" />

    <!-- iPhone and iPod touch -->
    <gap:splash src="resources/ios/splash/Default~iphone.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="resources/ios/splash/Default@2x~iphone.png" gap:platform="ios" width="640" height="960" />

    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <gap:splash src="resources/ios/splash/Default-568h@2x~iphone.png" gap:platform="ios" width="640" height="1136" />

    <!-- iPad -->
    <gap:splash src="resources/ios/splash/Default-Portrait~ipad.png" gap:platform="ios" width="768" height="1004" />
    <gap:splash src="resources/ios/splash/Default-Landscape~ipad.png" gap:platform="ios" width="1024" height="748" />
    <gap:splash src="resources/ios/splash/screen-ipad-portrait-7.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="resources/ios/splash/screen-ipad-landscape-7.png" gap:platform="ios" width="1024" height="768" />

    <!-- Retina iPad -->
    <gap:splash src="resources/ios/splash/Default-Portrait@2x~ipad.png" gap:platform="ios" width="1536" height="2008" />
    <gap:splash src="resources/ios/splash/Default-Landscape@2x~ipad.png" gap:platform="ios" width="2048" height="1496" />
    <gap:splash src="resources/ios/splash/screen-ipad-portrait-7@2x.png" gap:platform="ios" width="1536" height="2048" />
    <gap:splash src="resources/ios/splash/screen-ipad-landscape-7@2x.png" gap:platform="ios" width="2048" height="1536" />

    <!-- Android -->
    <preference name="android-minSdkVersion" value="10" />
    <preference name="android-targetSdkVersion" value="19" />
    <preference name="android-installLocation" value="auto" />
    <preference name="splashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="4000" />
    <preference name="android-windowSoftInputMode" value="stateVisible|adjustResize" />

    <!-- Icons -->
    <icon src="resources/android/drawable-ldpi/icon.png" gap:platform="android" gap:qualifier="ldpi" />
    <icon src="resources/android/drawable-mdpi/icon.png" gap:platform="android" gap:qualifier="mdpi" />
    <icon src="resources/android/drawable-hdpi/icon.png" gap:platform="android" gap:qualifier="hdpi" />
    <icon src="resources/android/drawable-xhdpi/icon.png" gap:platform="android" gap:qualifier="xhdpi" />
    <icon src="resources/android/drawable-xxhdpi/icon.png" gap:platform="android" gap:qualifier="xxhdpi" />

    <gap:splash src="resources/android/drawable-ldpi/screen.9.png" gap:platform="android" gap:qualifier="ldpi" />
    <gap:splash src="resources/android/drawable-mdpi/screen.9.png" gap:platform="android" gap:qualifier="mdpi" />
    <gap:splash src="resources/android/drawable-hdpi/screen.9.png" gap:platform="android" gap:qualifier="hdpi" />
    <gap:splash src="resources/android/drawable-xhdpi/screen.9.png" gap:platform="android" gap:qualifier="xhdpi" />

    <!--gap:splash src="resources/android/drawable-port-ldpi/screen.png" gap:platform="android" gap:qualifier="port-ldpi" />
    <gap:splash src="resources/android/drawable-port-mdpi/screen.png" gap:platform="android" gap:qualifier="port-mdpi" />
    <gap:splash src="resources/android/drawable-port-hdpi/screen.png" gap:platform="android" gap:qualifier="port-hdpi" />
    <gap:splash src="resources/android/drawable-port-xhdpi/screen.png" gap:platform="android" gap:qualifier="port-xhdpi" />
    <gap:splash src="resources/android/drawable-land-ldpi/screen.png" gap:platform="android" gap:qualifier="land-ldpi" />
    <gap:splash src="resources/android/drawable-land-mdpi/screen.png" gap:platform="android" gap:qualifier="land-mdpi" />
    <gap:splash src="resources/android/drawable-land-hdpi/screen.png" gap:platform="android" gap:qualifier="land-hdpi" />
    <gap:splash src="resources/android/drawable-land-xhdpi/screen.png" gap:platform="android" gap:qualifier="land-xhdpi" /-->

    <!-- Cordova plugins -->
    <gap:plugin name="org.apache.cordova.device"/>
    <gap:plugin name="org.apache.cordova.splashscreen"/>
    <gap:plugin name="org.apache.cordova.console"/>
    <gap:plugin name="com.phonegap.plugins.pushplugin" version="2.1.1" />
    <gap:plugin name="com.ionic.keyboard" version="0.0.1" />
    <gap:plugin name="com.plugin.datepicker" version="0.3.2" />
</widget>
